        </Custom:Tile>
        <TextBlock FontStyle="Italic" HorizontalAlignment="Right" Margin="0,417,408,0" TextWrapping="Wrap" Text="Let's Get Secured" VerticalAlignment="Top" Height="33" Width="212" Foreground="#FF007ACC" FontWeight="Bold" FontSize="16"/>

        <Rectangle HorizontalAlignment="Left"  Height="37"  Width="39" Margin="39,407,0,0" VerticalAlignment="Top"  RenderTransformOrigin="1.183,0.629">
